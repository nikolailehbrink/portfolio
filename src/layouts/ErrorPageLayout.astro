---
import BaseHead from "@/components/BaseHead.astro";
import { buttonVariants } from "@/components/react/ui/button";
import RootLayout from "@/layouts/RootLayout.astro";
import { HouseLineIcon } from "@phosphor-icons/react/dist/ssr/HouseLine";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<RootLayout>
  <BaseHead title={title} description={description} slot="head" />
  <div class="flex flex-col items-center justify-center gap-4">
    <h1 class="text-6xl font-bold text-neutral-200">{title}</h1>
    <p class="text-muted-foreground">{description}</p>

    <a class={buttonVariants()} href="/" data-astro-prefetch>
      Go Home!
      <HouseLineIcon size={20} weight="duotone" />
    </a>
  </div>
  <slot />
</RootLayout>
