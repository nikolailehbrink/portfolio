---
import ExperienceCard from "@/components/ExperienceCard.astro";
import ProjectTeaser from "@/components/ProjectTeaser.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import { getCollection } from "astro:content";
import { SKILLS } from "@/data/skills";
import Avatar from "@/components/Avatar.astro";
import { cn } from "@/lib/utils";
import { ProjectorScreenChartIcon } from "@phosphor-icons/react/dist/ssr/ProjectorScreenChart";
import { ArticleNyTimesIcon } from "@phosphor-icons/react/dist/ssr/ArticleNyTimes";
import { KanbanIcon } from "@phosphor-icons/react/dist/ssr/Kanban";
import { MailboxIcon } from "@phosphor-icons/react/dist/ssr/Mailbox";
import { StudentIcon } from "@phosphor-icons/react/dist/ssr/Student";
import { TextColumnsIcon } from "@phosphor-icons/react/dist/ssr/TextColumns";
import { buttonVariants } from "@/components/react/ui/button";
import NewsletterForm from "@/components/react/NewsletterForm";
import ContactForm from "@/components/react/ContactForm";
import PostTeaser from "@/components/PostTeaser.astro";
import { getPosts } from "@/lib/posts";
import BaseHead from "@/components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import Schema from "@/components/Schema.astro";
import { SOCIAL_LINKS } from "@/data/socials";
import type { Person, WithContext } from "schema-dts";

const [career, projects, posts] = await Promise.all([
  getCollection("career"),
  getCollection("projects"),
  getPosts({ take: 2 }),
]);

const workExperiences = career.filter((item) => item.data.type === "work");
const educationExperiences = career.filter(
  (item) => item.data.type === "education",
);

const item = {
  "@context": "https://schema.org",
  "@type": "Person",
  url: Astro.site?.href ?? Astro.url.href,
  name: SITE_TITLE,
  description: SITE_DESCRIPTION,
  sameAs: SOCIAL_LINKS.map(({ href }) => href),
  contactPoint: {
    "@type": "ContactPoint",
    email: "mail@nikolailehbr.ink",
  },
} satisfies WithContext<Person>;
---

<RootLayout>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} slot="head">
    <Schema item={item} />
  </BaseHead>
  <div class="flex flex-col items-start gap-8 sm:items-center sm:gap-16">
    <div
      class="relative flex animate-in items-center justify-center duration-1000
        fade-in-50 zoom-in-75"
    >
      <div
        class="absolute -inset-px animate-in rounded-2xl bg-linear-to-br
          from-amber-600 via-sky-600 to-sky-400 opacity-75 blur-2xl
          duration-[2s] zoom-in-80"
      >
      </div>
      <div
        class="absolute -inset-0.5 rounded-2xl bg-linear-to-br from-amber-600
          via-sky-600 to-sky-400"
      >
      </div>
      <Avatar loading="eager" class="relative size-24 rounded-xl sm:size-40" />
    </div>
    <div class="z-10 space-y-6 fade-in sm:text-center">
      <h1
        class="animate-in text-4xl font-bold tracking-tight duration-1000
          slide-in-from-bottom-40 sm:zoom-in-80"
      >
        Nikolai Lehbrink
      </h1>
      <p
        class="max-w-prose animate-in text-pretty text-white/70 duration-1000
          slide-in-from-bottom-30 fade-in sm:text-lg sm:slide-in-from-bottom-40"
      >
        I am a <b class="text-white">Full Stack Developer</b> and mostly{" "}
        <b class="text-white">Frontend Engineer</b> with a passion for building web
        applications based in Munich. I enjoy learning new things and sharing my
        knowledge with others.
      </p>
    </div>
    <div
      class="relative animate-in duration-1000 slide-in-from-bottom-5
        sm:slide-in-from-top-5"
    >
      <div
        class="absolute -top-1/12 left-1/5 h-80 w-40 rotate-45 animate-in
          bg-neutral-500/40 blur-2xl duration-[2.5s] fade-in"
      >
      </div>
      <div
        class="absolute -top-12 left-2/5 h-50 w-24 rotate-45 animate-in
          bg-neutral-500/50 blur-3xl duration-[3s] fade-in lg:-top-1/5
          lg:left-2/5 lg:h-96 lg:w-36"
      >
      </div>
      <div
        class="relative grid grid-cols-1 gap-8 rounded-3xl border-t
          bg-linear-to-b from-neutral-900/90 to-neutral-950/50 p-4 py-6
          max-sm:-mx-4 sm:grid-cols-2 sm:p-8 lg:grid-cols-3"
      >
        <div
          class="absolute -top-px left-1/4 h-px w-1/3 animate-in bg-linear-to-r
            from-transparent via-white/60 to-transparent duration-[2s]
            fade-in-40 slide-in-from-left-100"
        >
        </div>
        <div class="flex flex-col gap-2 sm:row-span-2">
          <h2 class="flex items-center gap-1 text-2xl font-bold">
            <ProjectorScreenChartIcon size={28} weight="duotone" />
            Projects
          </h2>
          <p class="max-w-prose text-muted-foreground">
            Here are some of the projects I have worked on. This is a growing
            list of my work, showcasing my skills and interests in web
            development and design.
          </p>
        </div>
        {/* TODO: Add animation to this element */}
        <div
          class="order-last animate-pulse rounded-lg bg-neutral-900 p-4
            text-center text-muted-foreground offset-border"
        >
          More projects are listed here soon!
        </div>

        {
          projects.map((project, index) => (
            <ProjectTeaser
              class={cn(
                "animate-in duration-700 fade-in-50 sm:slide-in-from-bottom-25",
                index % 2 === 0
                  ? "sm:duration-1000 sm:slide-in-from-bottom-35"
                  : "",
              )}
              {...project.data}
            />
          ))
        }
      </div>
    </div>
    <div class="flex w-full max-w-3xl flex-col gap-4">
      <div class="flex flex-col gap-2">
        <h2 class="flex items-center gap-1 text-2xl font-bold">
          <ArticleNyTimesIcon size={28} weight="duotone" />
          Blog
        </h2>
        <p class="mb-3 max-w-prose text-muted-foreground">
          A collection of my thoughts, ideas, and experiences. I write about
          various topics, including web development, technology, and personal
          topics.
        </p>
        {
          posts.length > 0 ? (
            <div class="relative">
              <ul class="flex flex-col gap-4">
                {posts.map(({ data, id, readingTime }) => (
                  <PostTeaser post={{ ...data, slug: id, readingTime }} />
                ))}
              </ul>
              <div class="absolute -inset-x-[3px] -bottom-[3px] z-30 flex justify-center rounded-xl bg-linear-to-b from-transparent to-background pt-12 pb-4">
                <a class={buttonVariants()} href="/blog" data-astro-prefetch>
                  <TextColumnsIcon size={24} weight="duotone" />
                  View all posts
                </a>
              </div>
            </div>
          ) : null
        }
        <NewsletterForm showText={false} client:visible />
      </div>
    </div>
    <div class="grid w-full grid-cols-1 gap-12 lg:grid-cols-2">
      <div class="flex max-w-2xl flex-col gap-2">
        <h2 class="flex items-center gap-1 text-2xl font-bold">
          <KanbanIcon size={28} weight="duotone" />
          Skills
        </h2>
        <p class="mb-3 max-w-prose text-muted-foreground">
          I have a diverse skill set that includes frontend and backend
          development, design, and project management. I am always eager to
          learn new technologies and improve my skills. Here are some that I
          have acquired over the years.
        </p>
        <div class="flex flex-wrap gap-4">
          {
            Object.entries(SKILLS).map(([category, skillSet]) => {
              return (
                <div class="flex flex-col gap-1 overflow-x-hidden rounded-lg border bg-background shadow-md offset-border">
                  <ul class="relative flex snap-x snap-mandatory gap-4 overflow-x-auto border-b bg-neutral-900 p-4 shadow">
                    {skillSet.map(({ name, logo: Logo, url }) => (
                      <li class="snap-start scroll-mx-4">
                        <a
                          class="flex flex-col items-center gap-2 text-xs whitespace-nowrap text-muted-foreground grayscale-100 transition-[filter_color] duration-300 hover:text-foreground hover:grayscale-0"
                          href={url}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <Logo class="size-8 rounded" />
                          <span>{name}</span>
                        </a>
                      </li>
                    ))}
                  </ul>
                  <h3 class="py-0.5 pb-1.5 text-center text-sm text-muted-foreground">
                    {category}
                  </h3>
                </div>
              );
            })
          }
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <h2 class="flex items-center gap-1 text-2xl font-bold">
          <StudentIcon size={28} weight="duotone" />
          Work and Education
        </h2>
        <p class="mb-3 max-w-prose text-muted-foreground">
          I have worked in various roles and companies, gaining experience in
          web development, design, and project management. Here are some of my
          work experiences and educational background.
        </p>
        <div class="flex flex-col gap-4">
          {
            workExperiences.map((experience) => {
              return <ExperienceCard {...experience.data} />;
            })
          }
          {
            educationExperiences.map((experience) => {
              return <ExperienceCard {...experience.data} />;
            })
          }
        </div>
      </div>
    </div>
    <section class="@container flex w-full flex-col gap-2 lg:max-w-3xl">
      <h2 class="flex items-center gap-1 text-2xl font-bold">
        <MailboxIcon size={28} weight="duotone" />
        Contact
      </h2>
      <p class="mb-3 max-w-prose text-muted-foreground">
        Whether you have a question, want to collaborate on a project, or just
        want to say hello, feel free to reach out using the form below. I will
        get back to you as soon as possible.
      </p>
      <ContactForm client:visible />
    </section>
  </div>
</RootLayout>
