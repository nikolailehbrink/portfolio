---
import ErrorPageLayout from "@/layouts/ErrorPageLayout.astro";

export const prerender = false;

const { searchParams } = Astro.url;
const alreadySubscribed = searchParams.has("alreadySubscribed");

const title = alreadySubscribed
  ? "You are already subscribed!"
  : "Thank you for subscribing!";

const description = `I promise to only send you relevant updates and content about once a
      month. If you ever change your mind, you can unsubscribe at any time from
      each email.`;
---

<ErrorPageLayout title={title} description={description} />
